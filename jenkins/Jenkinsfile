pipeline {
    agent {
        docker {
            image 'python:3.9'
            label 'my-node'
        }
    }
    stages {
        stage('Build') {
            steps {
                echo 'Building with Python Docker image'
                sh 'pip install -r requirements.txt'
            }
        }
    }
}
