pipeline {
    agent any

    stages {
        stage('Install Python 3') {
            steps {
                script {
                    // Install Python 3 (Linux)
                    sh '''
                        # Update package list
                        sudo apt update -y

                        # Install Python 3 and pip
                        sudo apt install -y python3 python3-pip

                        # Verify Python installation
                        python3 --version
                    '''
                }
            }
        }

        stage('Set up Virtualenv') {
            steps {
                script {
                    // Set up Virtual Environment for Python dependencies
                    sh '''
                        python3 -m venv venv
                        source venv/bin/activate
                    '''
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    // Install dependencies from requirements.txt
                    sh '''
                        source venv/bin/activate
                        pip install -r requirements.txt
                    '''
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    // Build your application here
                    echo 'Build step'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    // Run tests here
                    echo 'Test step'
                }
            }
        }

        stage('Package') {
            steps {
                script {
                    // Package your application here
                    echo 'Package step'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Deploy your application here
                    echo 'Deploy step'
                }
            }
        }
    }
}
