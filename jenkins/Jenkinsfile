pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/PadminiPriyanka28/simple-python-pyinstaller-app.git'
            }
        }
        stage('Build') {
            steps {
                sh 'pip install -r requirements.txt'
                sh 'pyinstaller --onefile main.py'
            }
        }
    }
}
