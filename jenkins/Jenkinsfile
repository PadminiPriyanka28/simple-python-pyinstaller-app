pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Set Up Virtualenv') {
            steps {
                sh 'python3 -m venv venv'                     // Create a virtual environment
                sh './venv/bin/pip install -r requirements.txt' // Install dependencies in the virtual environment
            }
        }
        stage('Build') {
            steps {
                sh './venv/bin/python build.py' // Example build step
            }
        }
        stage('Test') {
            steps {
                sh './venv/bin/python -m unittest discover tests' // Run tests in the virtual environment
            }
        }
        stage('Package') {
            steps {
                sh './venv/bin/python package.py' // Example package step
            }
        }
        stage('Deploy') {
            steps {
                sh './venv/bin/python deploy.py' // Example deploy step
            }
        }
    }
}

